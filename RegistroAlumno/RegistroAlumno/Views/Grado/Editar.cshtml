@model RegistroAlumno.Models.ListViewModel.GradoViewModel
@{
    ViewBag.Title = "Editar";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Editar", "Grado", FormMethod.Post))
{
    @Html.HiddenFor(d=>d.Grd_id)
   


    @Html.LabelFor(d => d.Grd_nombre)
    @Html.TextBoxFor(d => d.Grd_nombre, "", new { @class = "form-control" });


    @Html.HiddenFor(d=>d.Created_at)
    <br />

    @Html.LabelFor(d => d.Updated_at)
    <br />
    @Html.EditorFor(d => d.Updated_at, "", new { @class = "form-control" });



    <div style="padding-top: 5px">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>

}

