@model List<RegistroAlumno.Models.ListViewModel.ListGradoViewModel>
@{
    ViewBag.Title = "Grados";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right; padding:5px">
    <a href="~/Grado/Nuevo" class="btn btn-primary">Nuevo Grado</a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Grado</th>
                <th>Fecha de Creación</th>
                <th>Fecha de Actualizacion</th>
                <th>Accion</th>

            </tr>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Grd_id</td>
                    <td>@i.Grd_nombre</td>
                    <td>@i.Created_at</td>
                    <td>@i.Updated_at</td>
                    <td>
                        <a href="~/Grado/Editar/@i.Grd_id" class="btn btn-success">Editar</a>
                        <a href="~/Grado/Eliminar/@i.Grd_id" class="btn alert-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </table>

    </div>

</div>

