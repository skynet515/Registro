@model RegistroAlumno.Models.ListViewModel.GradoViewModel
@{
    ViewBag.Title = "Nuevo";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Nuevo", "Grado", FormMethod.Post))
{
    <div>
        @Html.LabelFor(d => d.Grd_id)
        @Html.TextBoxFor(d => d.Grd_id, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(d=>d.Grd_id, null, new { @class="red"})
    </div>
    

    <div>
        @Html.LabelFor(d => d.Grd_nombre)
        @Html.TextBoxFor(d => d.Grd_nombre, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(d => d.Grd_nombre, null, new { @class = "red" })
    </div>
   

    <div>
        @Html.LabelFor(d => d.Created_at)
        <br />
        @Html.EditorFor(d => d.Created_at, "", new { @class = "form-control" });
        @Html.ValidationMessageFor(d => d.Created_at, null, new { @class = "red" })
    </div>
    <br />
    <div>
        @Html.LabelFor(d => d.Updated_at)
        <br />
        @Html.EditorFor(d => d.Updated_at, "", new { @class = "form-control" });
        @Html.ValidationMessageFor(d => d.Updated_at, null, new { @class = "red" })
    </div>
   



    <div style="padding-top: 5px">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>

}

