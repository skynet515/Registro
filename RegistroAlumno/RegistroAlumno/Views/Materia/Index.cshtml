@model List<RegistroAlumno.Models.ListViewModel.ListMateriaViewModel>
@{
    ViewBag.Title = "Materia";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right; padding:5px">
    <a href="~/Materia/Nuevo" class="btn btn-primary">Nueva Materia</a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Nombre Materia</th>
                <th>Fecha de Creación</th>
                <th>Fecha de Actualizacion</th>
                <th>Accion</th>

            </tr>
            @foreach (var i in Model)
            {
                <tr>
                <td>@i.Mat_id</td>
                <td>@i.Mat_nombre</td>
                <td>@i.Created_at</td>
                <td>@i.Updated_at</td>
                <td>
                    <a href="~/Materia/Editar/@i.Mat_id" class="btn btn-success">Editar</a>
                    <a href="~/Materia/Eliminar/@i.Mat_id" class="btn alert-danger">Eliminar</a>
                </td>
                </tr>
            }
        </table>

    </div>

</div>

