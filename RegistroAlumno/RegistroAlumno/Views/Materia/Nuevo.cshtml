@model RegistroAlumno.Models.ListViewModel.MateriaViewModel
@{
    ViewBag.Title = "Nuevo";
}


<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Nuevo", "Materia", FormMethod.Post))
{
    <div>
        @Html.LabelFor(d => d.Mat_id)

        @Html.TextBoxFor(d => d.Mat_id, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(d => d.Mat_id, null, new { @class = "red" })
    </div>
    

    <div>
        @Html.LabelFor(d => d.Mat_nombre)
        @Html.TextBoxFor(d => d.Mat_nombre, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(d => d.Mat_nombre, "", new { @class = "red" })
    </div>
    

    <div>
        @Html.LabelFor(d => d.Created_at)
        <br />
        @Html.EditorFor(d => d.Created_at, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(d => d.Created_at, null, new { @class = "red" })
    </div>
    
    <br />
    <div>
        @Html.LabelFor(d => d.Updated_at)
        <br />
        @Html.EditorFor(d => d.Updated_at, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(d => d.Updated_at, null, new { @class = "red" })
    </div>
   

    

    <div style="padding-top: 5px">
        <input type="submit" value="Guardar" class="btn btn-primary"/>
    </div>

}


